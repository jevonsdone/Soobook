		function afterRender() {
			$(".rating").rating();
			$(".dot").dotdotdot();
		}

		var pageCount;
		var pageSize = 20;
		var urlCount = "/book/genrecount/20?t=Oriental Legend";
		var urlData = "/book/genre/{1}?t=Oriental Legend&p={0}";
		var emptyContent = "";
		function renderDataOfPage(data) {
			if (data.length == 0) {
				return emptyContent;
			} else {
				var html = "";
				for (var i = 0; i < data.length; i++) {
					var d = data[i];
					var tags = d.genres;
					var genreHtml = "";
					for (var j = 0; j < d.genres.length; j++) {
						genreHtml += "<div class='genre'><a href='/genre/{0}'>{0}</a></div>"
								.format(d.genres[j].name);
					}
					html += template.format(d.id, d.name, d.cover, genreHtml,
							d.rating, d.chapterCount, d.readCount, d.synopsis);
				}
				return html;
			}
		}

		function formatDate(date) {
			return $.format.date(date, "MM/dd/yyyy");
		}
