				+ "<div class='clearfix icons'>"
				+ "<div class='rating_box'><input value='{4}' type='number' class='rating' min=0 max=5 step=1 data-size='xs' data-show-clear='false' readonly='readonly'></div>"
				+ "<div class='chapter_box'><i class='glyphicon glyphicon-list' />{5}</div>"
				+ "<div class='read_box'><i class='glyphicon glyphicon-eye-open' />{6}</div>"
